# Exclude these paths from linting
exclude_paths:
  - .github/
  - .idea/
  - .vscode/
  - ansible_facts.d/
  - bin/
  - defaults/
  - filter_plugins/
  - library/
  - scripts/

# Skip these linting rules
skip_list:
  - braces
  - git-latest
  - no-changed-when
  - ignore-errors
  - risky-shell-pipe
  - package-latest
  - no-handler
  - command-instead-of-module
  - command-instead-of-shell
  - yaml[line-length]
  - yaml[truthy]
  - schema[tasks]
  - name[casing]
  - name[template]
  - key-order[task]
