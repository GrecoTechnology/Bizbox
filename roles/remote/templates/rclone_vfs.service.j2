[Unit]
Description=Rclone VFS Mount
After=network-online.target

[Service]
User={{ user.name }}
Group={{ user.name }}
Type=notify
ExecStartPre=/bin/sleep 10
ExecStart={{ rclone_vfs_mount_start_command }}
ExecStartPost={{ rclone_vfs_mount_start_post_command }}
ExecStop={{ rclone_vfs_mount_stop_command }}
Restart=on-abort
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=default.target
