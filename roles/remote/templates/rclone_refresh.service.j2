[Unit]
Description=Rclone VFS Refresh - Service
Requires=rclone_vfs.service
After=rclone_vfs.service

[Service]
User={{ user.name }}
Group={{ user.name }}
Type=oneshot
ExecStartPre=/bin/sleep 10
ExecStart={{ rclone_vfs_refresh_command }}

[Install]
WantedBy=default.target